<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="using:EasySave.ViewModels"
        mc:Ignorable="d"
        x:Class="EasySave.Views.app.MainWindow"
        x:DataType="vm:MainViewModel"
        Height="550"
        Width="950"
        Title="EasySave"
        ExtendClientAreaToDecorationsHint="True">

    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <DockPanel LastChildFill="True">
        <Menu Background="#383A42" x:Name="MainMenu" PointerPressed="OnMenuPointerPressed" DockPanel.Dock="Top">
            <MenuItem Header="EasySave" Foreground="White" PointerPressed="OnMenuItemPointerPressed">
                <MenuItem Header="Quitter" Click="OnClose" />
            </MenuItem>

            <!-- Section File -->
            <MenuItem Header="Fichier" Foreground="White" PointerPressed="OnMenuItemPointerPressed">
                <MenuItem Header="Paramètres">
                    <MenuItem Header="Langue">
                        <MenuItem Header="Français">
                            <MenuItem.Icon>
                                <RadioButton GroupName="Language" IsChecked="True" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="English">
                            <MenuItem.Icon>
                                <RadioButton GroupName="Language" IsChecked="False" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>

                    <!-- Sous-menu Format des Logs -->
                    <MenuItem Header="Format des logs">
                        <MenuItem Header="XML">
                            <MenuItem.Icon>
                                <CheckBox IsChecked="True" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="JSON">
                            <MenuItem.Icon>
                                <CheckBox IsChecked="False" />
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Console">
                            <MenuItem.Icon>
                                <CheckBox IsChecked="False" />
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </MenuItem>
            </MenuItem>

            <!-- Section Aide -->
            <MenuItem Header="Aide" Foreground="White" PointerPressed="OnMenuItemPointerPressed">
                <MenuItem Header="À propos" />
            </MenuItem>
        </Menu>

        <TabControl x:Name="SidebarTabs"
                    TabStripPlacement="Left"
                    BorderThickness="0"
                    Background="#F7F8FA">
            <TabItem Header="Mes Sauvegardes" FontSize="18">
                <ListBox x:Name="JobList" ItemsSource="{Binding BackupJobs}" Background="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical">

                                <Grid Margin="5 5 5 0 " ColumnDefinitions="*,60">

                                    <StackPanel Grid.Column="0" Orientation="Vertical" Spacing="2">
                                        <TextBlock Text="{Binding Name}" FontWeight="Bold" />
                                        <TextBlock Text="{Binding BackupType.Name}" Foreground="Gray" />
                                        <TextBlock Text="{Binding SourceFolder}" FontStyle="Italic" />
                                        <TextBlock Text="{Binding DestinationFolder}" Foreground="Gray" />
                                    </StackPanel>

                                    <Button Grid.Column="1" Content="▶" Click="OnStartJobButton" />
                                </Grid>

                                <TextBlock Text="{Binding CurrentExecution.Exception.Message}"
                                           Foreground="Red"
                                           TextWrapping="Wrap"
                                           IsVisible="{Binding 
                                CurrentExecution.Exception.Message, 
                                                Converter={x:Static StringConverters.IsNotNullOrEmpty}}" />

                                <ProgressBar Minimum="0"
                                             Maximum="{Binding CurrentExecution.TotalSteps}"
                                             Value="{Binding CurrentExecution.CurrentProgress}"
                                             Height="5"
                                             Foreground="DodgerBlue"
                                             Background="LightGray"
                                             Opacity="{Binding !!CurrentExecution}" />

                            </StackPanel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
            <TabItem Header="Nouvelle Sauvegarde" FontSize="18">
                <Border Padding="10" Background="White">
                    <StackPanel Orientation="Vertical" Spacing="10" VerticalAlignment="Center"
                                HorizontalAlignment="Center">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Width="200">Nom de la sauvegarde</TextBlock>
                            <TextBox x:Name="JobName" Width="300" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Width="200">Dossier source</TextBlock>
                            <TextBox x:Name="SourcePath" Width="300" />
                            <Button Content="📁" Click="OnSelectSourceFolder" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Width="200">
                                Dossier destination
                            </TextBlock>
                            <TextBox x:Name="TargetPath" Width="300" />
                            <Button Content="📁" Click="OnSelectTargetFolder" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Width="200">Mode</TextBlock>
                            <ComboBox Width="300" x:Name="Mode" ItemsSource="{Binding BackupTypes}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <Button Content="Créer" Click="OnCreateJobButton" Padding="20 5" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

            </TabItem>
            <TabItem Header="Historique" FontSize="18">
                <ListBox ItemsSource="{Binding History}" Background="White">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5" ColumnDefinitions="100,1*,150">
                                <TextBlock Grid.Column="0" Text="{Binding BackupJob.Name}" FontWeight="Bold"
                                           Width="100" />
                                <StackPanel Grid.Column="1">
                                    <TextBlock Text="{Binding BackupJob.SourceFolder}" FontStyle="Italic" />
                                    <TextBlock Text="{Binding BackupJob.DestinationFolder}" FontStyle="Italic" />
                                </StackPanel>
                                <TextBlock Grid.Column="2" Text="{Binding StartTime}" Foreground="Gray" />
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>